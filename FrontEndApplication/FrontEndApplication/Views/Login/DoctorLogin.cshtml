@model FrontEndApp.Models.UserDetails

@{
    ViewData["Title"] = "Doctor Login Page";
}

<div class="row justify-content-md-center">
    <div class="col-md-4">
        <div class="card">
            <h3>Welcome to Doctor Login</h3>
            <div class="card-body">
                @using (Html.BeginForm("Index", "DoctorLogin", FormMethod.Post))
                {
                    <div class="form-group">
                        @Html.LabelFor(m => m.EmailId)
                        @Html.TextBoxFor(m => m.EmailId, "", new { @class = "form-control", @placeholder = "Email" })

                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                    </div>
                    <div class="form-group">
                        <input type="submit" name="submit" class="btn btn-primary" value="Login" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>
